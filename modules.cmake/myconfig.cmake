function(FIND_HPP MACRO_ARG1 MACRO_ARG2)
    set(list ${MACRO_ARG2})
    foreach(dir IN LISTS list)
        file(GLOB temp "${dir}/*.hpp")
    endforeach()
    set(${MACRO_ARG1} ${temp} PARENT_SCOPE)
endfunction()
