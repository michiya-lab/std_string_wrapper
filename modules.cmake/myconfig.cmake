macro(DEFINE_ADD_LIBRARY MACRO_ARG1 MACRO_ARG2)
    if(DEFINED BUILD_SHARED_LIBS)
      add_library(${MACRO_ARG1} ${MACRO_ARG2})
    else()
      add_library(${MACRO_ARG1} SHARED ${MACRO_ARG2})
    endif()
endmacro()
