function(FIND_CPP MACRO_ARG1 MACRO_ARG2)
    set(list ${MACRO_ARG2})
    foreach(dir IN LISTS list)
        file(GLOB temp "${dir}/*cpp")
        list(APPEND temp_list ${temp})
    endforeach()
    set(${MACRO_ARG1} ${temp_list} PARENT_SCOPE)
endfunction()
