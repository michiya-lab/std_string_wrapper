function(CHECK_DIRECTORIES_EXIST MACRO_ARG)
    foreach(i IN LISTS ${MACRO_ARG})
      if(NOT EXISTS ${i})
        message(FATAL_ERROR "\n could not found: ${i}")
      endif()
    endforeach()
endfunction()
